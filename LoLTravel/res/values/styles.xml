<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#FFBFBFBF</item>
    </style>
    
    <style name="TransDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@+android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@+android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="Button_small_black">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:background">@drawable/btn_back_black</item>
    </style>
    
    <style name="InputBox_Tablet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/input</item>
        <item name="android:textColor">#5a6378</item>
        <item name="android:textSize">14dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>
    
</resources>
